<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#030C43"
    android:isScrollContainer="true"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:paddingTop="50dp"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <LinearLayout
                        android:id="@+id/imageButton"
                        android:layout_width="83dp"
                        android:layout_height="61dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/Widget.AppCompat.Button.Colored"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        tools:ignore="MissingConstraints">
                    <ImageButton


                        android:layout_width="83dp"
                        android:layout_height="61dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="30dp"
                        android:backgroundTint="#750B04"
                        android:onClick="startSos"
                        android:background="@drawable/ic_sos"
                        android:textColor="#E6E2E2"


                        android:layout_alignParentLeft="true" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00041B"
                        android:text="@string/send_sos"
                        android:textAlignment="center"
                        android:textColor="#E6E2E2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/imageButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:gravity="center_horizontal" />


                </androidx.constraintlayout.widget.ConstraintLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/button_background"

                        android:gravity="center"
                        android:orientation="vertical">
                        <Button

                            android:background="@drawable/ic_icons8_poison_64"
                            android:id="@+id/unsafe_nearby"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:onClick="unsafe_nearby"
                            android:textColor="#E6E2E2">
                        </Button>
                        <TextView

                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:textColor="#E6E2E2"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/area_nearme"
                            ></TextView>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:gravity="center"
                        android:background="@drawable/button_background"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/Unsafe_routes"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_icons8_treasure_map_64"
                            android:backgroundTint="#00041B"
                            android:gravity="center"
                            android:onClick="routes"

                            android:textColor="#E6E2E2">

                        </Button>
                        <TextView
                            android:textSize="10dp"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:textColor="#E6E2E2"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/find_routes"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <Button
                            android:background="@drawable/ic_icons8_contact_details_100"
                            android:id="@+id/PrimeContacts"

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:backgroundTint="#00041B"
                            android:gravity="center"
                            android:onClick="enter_prime"
                            android:textColor="#E6E2E2">
                        </Button>

                        <TextView
                          android:textSize="10dp"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:textColor="#E6E2E2"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/profile"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <LinearLayout

                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:gravity="center"
                        android:background="@drawable/button_background"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/UpdateCrime"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_icons8_server_64"
                            android:backgroundTint="#00041B"
                            android:gravity="center"
                            android:onClick="Update_loc"

                            android:textColor="#E6E2E2">

                        </Button>
                        <TextView
                            android:textSize="10dp"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:textColor="#E6E2E2"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="@string/mark_spot"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <Button
                            android:background="@drawable/ic_icons8_poison_64"
                            android:id="@+id/share"

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:onClick="share_loc"
                            android:textColor="#E6E2E2">
                        </Button>


                        <TextView
                            android:textSize="10dp"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:textColor="#E6E2E2"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="@string/share_loc"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:gravity="center"
                        android:background="@drawable/button_background"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/otherlocshared"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_icons8_treasure_map_64"
                            android:gravity="center"
                            android:onClick="location_sharing"

                            android:textColor="#E6E2E2">

                        </Button>


                        <TextView
                            android:textSize="10dp"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:textColor="#E6E2E2"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="@string/shared_loc_with_me"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <View
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F8F4F4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView

                            android:backgroundTint="#138CC3"
                            android:layout_width="50dp"
                            android:layout_height="50dp">
                        </ImageView>
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:text="@string/share_live_cam"
                            android:gravity="left"
                            android:layout_marginStart="10dp"
                            android:textColor="#fff"
                            android:layout_marginLeft="10dp" />

                        <ToggleButton
                            android:id="@+id/togglebutton"
                            android:layout_marginStart="53dp"
                            android:layout_width="wrap_content"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:onClick="onToggleClicked"
                            android:layout_marginLeft="100dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView

                            android:backgroundTint="#138CC3"
                            android:layout_width="50dp"
                            android:layout_height="50dp">
                        </ImageView>
                        <TextView
                            android:layout_width="160dp"
                            android:layout_height="50dp"
                            android:text="@string/share_live_mic"
                            android:gravity="left"
                            android:layout_marginStart="10dp"
                            android:textColor="#fff"
                            android:layout_marginLeft="10dp" />
                        <ToggleButton
                            android:id="@+id/togglebutton2"
                            android:layout_marginStart="53dp"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:onClick="toggleclick"
                            android:layout_marginLeft="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F8F4F4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_height="350dp">
                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
