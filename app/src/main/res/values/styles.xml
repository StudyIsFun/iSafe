<resources>

    <!-- Base application theme. -->



    <style name="textViewStyle">
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/poppins_family</item>
    </style>

    <style name="ButtonFilled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">#403D6C</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="BodyText">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">@color/blackText</item>
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
